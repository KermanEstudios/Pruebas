local localPlayer = game.Players.LocalPlayer
local localPlayerCF = localPlayer.Character.HumanoidRootPart.CFrame

for _, player in pairs(game.Players:GetPlayers()) do
    if player ~= localPlayer then
        -- Posiciona a otros jugadores en la misma posici√≥n que el jugador local
        player.Character.HumanoidRootPart.CFrame = localPlayerCF

        -- Establece la propiedad Anchored para todas las partes del personaje
        for _, part in pairs(player.Character:GetDescendants()) do
            if part:IsA("BasePart") then
                part.Anchored = false  -- Cambia a 'false' para permitir movimiento
            end
        end
    end
end

-- No se altera la propiedad Anchored del HumanoidRootPart del jugador local