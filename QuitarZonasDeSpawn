local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local barrier = Instance.new("Part", (game.Workspace.SafeZones or Instance.new("Folder", game.Workspace)).Name = "SafeZones") 
barrier.Size, barrier.Position, barrier.Anchored = Vector3.new(5, 1, 5), Vector3.new(0, 5, 0), true
local destroyEvent = Instance.new("RemoteEvent", ReplicatedStorage); destroyEvent.Name = "DestroyBarrierEvent"

barrier.Touched:Connect(function(hit)
    if Players:GetPlayerFromCharacter(hit.Parent) then
        destroyEvent:FireAllClients(barrier); barrier:Destroy()
    end
end)

destroyEvent.OnClientEvent:Connect(function() print(barrier.Name .. " ha sido destruido.") end)
